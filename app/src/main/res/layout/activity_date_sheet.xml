<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/exam"
    android:orientation="vertical"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="com.kashdevelopment.development.kashmirstudentportal.ResultsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="University and Board DateSheets"
        android:layout_gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="26sp" />


    <Button
        android:id="@+id/kuniver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                         University Of KASHMIR                               "
        android:onClick="univer"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.TabWidget"
        android:textColor="@color/colorPrimaryDark" />


    <Button
        android:id="@+id/centre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                    Central University Of Kashmir                 "
        android:onClick="centre1"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.TabWidget"
        android:textColor="@color/colorPrimaryDark" />
    <Button
        android:id="@+id/ignou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="              INDRA GANDHI NATIONAL OPEN UNIVERSITY    "
        android:onClick="ignou1"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.TabWidget"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/bose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="             State Board of school education kashmir    "
        android:onClick="bose1"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.TabWidget"
        android:textColor="@color/colorPrimaryDark" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>


</LinearLayout>
